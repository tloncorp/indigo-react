{
  "name": "@tlon/indigo-react",
  "version": "1.2.24",
  "descrip tion": "React implementation of Tlon's design system, Indigo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "tailwind:dist": "copyfiles tailwind.config.js dist && copyfiles -u 1 src/styles/*.css dist",
    "build": "npm run tailwind:dist && tsc && vite build",
    "serve": "vite preview",
    "clear": "rm -rf dist",
    "reset": "rm -rf node_modules package-lock.json && npm install",
    "format": "prettier --write ./src/*",
    "prepare": "npm run build"
  },
  "author": "Gavin Atkinson",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-polymorphic": "^0.0.12",
    "@reach/menu-button": "^0.15.3",
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.0.1",
    "yup": "^0.32.9"
  },
  "peerDependencies": {
    "formik": "^2.1.5",
    "styled-components": "^5.1.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@esbuild-plugins/esm-externals": "^0.0.5",
    "@originjs/vite-plugin-commonjs": "^1.0.0-beta6",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.14",
    "@types/yup": "^0.29.5",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.3.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.12.17",
    "formik": "^2.1.5",
    "husky": "^4.2.5",
    "nightwind": "^1.1.12",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
